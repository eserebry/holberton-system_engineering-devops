description "Gunicorn application server running airbnb-onepage"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid ubuntu
setgid www-data

env PATH=/home/ubuntu/AirBnB_clone_v2/airbnbenv/bin
chdir /home/ubuntu/AirBnB_clone_v2/web_flask
exec gunicorn --bind 0.0.0.0:8000 0-hello_route:app
